<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="attribute_value.controller.admin" class="WellCommerce\Bundle\AttributeBundle\Controller\Admin\AttributeValueController">
            <argument type="service" id="attribute_value.manager"/>
            <argument type="service" id="attribute_value.form_builder.admin"/>
            <argument type="service" id="attribute_value.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute_value.form_builder.admin" class="WellCommerce\Bundle\AttributeBundle\Form\Admin\AttributeValueFormBuilder" parent="core.form_builder" />

        <service id="attribute_value.dataset.query_builder.admin" class="WellCommerce\Bundle\AttributeBundle\DataSet\Admin\AttributeValueDataSetQueryBuilder" public="false">
            <argument type="service" id="attribute_value.repository"/>
        </service>

        <service id="attribute_value.dataset.admin" class="WellCommerce\Bundle\AttributeBundle\DataSet\Admin\AttributeValueDataSet">
            <argument type="service" id="attribute_value.dataset.query_builder.admin"/>
            <tag name="dataset"/>
        </service>

        <service id="attribute_value.datagrid" class="WellCommerce\Bundle\AttributeBundle\DataGrid\AttributeValueDataGrid">
            <argument type="service" id="attribute_value.dataset.admin"/>
            <tag name="datagrid" alias="attribute_value"/>
        </service>
    </services>
</container>
