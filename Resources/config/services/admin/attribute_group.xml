<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="attribute_group.controller.admin" class="WellCommerce\Bundle\AttributeBundle\Controller\Admin\AttributeGroupController">
            <argument type="service" id="attribute_group.manager"/>
            <argument type="service" id="attribute_group.form_builder.admin"/>
            <argument type="service" id="attribute_group.datagrid"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="attribute_group.form_builder.admin" class="WellCommerce\Bundle\AttributeBundle\Form\Admin\AttributeGroupFormBuilder" parent="core.form_builder" />

        <service id="attribute_group.dataset.admin" class="WellCommerce\Bundle\AttributeBundle\DataSet\Admin\AttributeGroupDataSet">
            <argument type="service" id="attribute_group.repository"/>
            <tag name="dataset" alias="attribute_group.admin"/>
        </service>

        <service id="attribute_group.datagrid" class="WellCommerce\Bundle\AttributeBundle\DataGrid\AttributeGroupDataGrid">
            <argument type="service" id="attribute_group.dataset.admin"/>
            <tag name="datagrid" alias="attribute_group"/>
        </service>
    </services>
</container>
